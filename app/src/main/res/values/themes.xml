<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Kandang" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="fontFamily">@font/airbnb_cereal_medium</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="Theme.Kandang" parent="Base.Theme.Kandang" />

    <style name="CustomButton.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/color_selector</item>
        <item name="cornerRadius">16dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/text_color_selector</item>
        <item name="android:textColor">@color/text_color_selector</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">100dp</item>
        <item name="boxCornerRadiusTopEnd">100dp</item>
        <item name="boxCornerRadiusBottomStart">100dp</item>
        <item name="boxCornerRadiusBottomEnd">100dp</item>
        <item name="endIconDrawable">@drawable/ic_search</item>
        <item name="endIconMode">custom</item>
        <item name="hintEnabled">false</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="boxStrokeColor">#BBBBBB</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

</resources>